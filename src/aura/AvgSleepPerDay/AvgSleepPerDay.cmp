<aura:component description="AvgSleepPerDay"
                implements="force:appHostable,flexipage:availableForAllPageTypes"
                controller="ApexHelperController">

    <aura:attribute name="total" type="Integer"/>
    <aura:attribute name="numberOfDays" type="Integer" />
    <aura:attribute name="pageReference" type="Object" />
    <aura:handler name="init" value="{!this}" action="{!c.init}"/>
    <lightning:card>
        <aura:set attribute="title">
            <c:CardTitle icon="ðŸ’¤" pageReference="{!v.pageReference}">
                <aura:set attribute="title">
                    Sleep Daily Average
                </aura:set>
            </c:CardTitle>
        </aura:set>
        <aura:set attribute="footer">
            <c:cardFooterTargetBadge targetCategory="sleep" />
        </aura:set>
        <div class="slds-card__body slds-card__body_inner slds-text-align--center">
            <p class="slds-text-heading_medium">Last <strong>{!v.numberOfDays}</strong> Days
            </p>
            <p class="slds-text-heading_large slds-text-color_success" style="font-size:2rem; font-weight: bold;">
                {!v.total} hours
            </p>
        </div>
    </lightning:card>
</aura:component>